<div class="container-sm mt-4">
    <div class="row row-cols-5 ">
        {% for trick in tricks %}
            <div class="col card m-2 card-responsive">
                <a href="/tricks/singletrick?id={{trick.id}}"><img class="card-img-top home" src="{{ asset('images/tricks/mini/300x300-' ~ trick.mainImageName) }}" alt=""></a>
                <div class="card-body d-flex position-Srelative">
                    <a class="btn btn-outline-info btn-sm trick-link" href="/tricks/singletrick?id={{trick.id}}" target="_blank">{{ trick.name }}</a>
                    <div class="position-absolute position-absolute end-0 m-2">
                        <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="p-1">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                        <a href="" class="p-1" data-delete data-token="{{ csrf_token('delete' ~ trick.mainImageName)}}">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </div>                                    
                </div>
            </div>  
        {% endfor %}            
                                
    </div>         
</div>