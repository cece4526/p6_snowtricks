{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<section class="container-fluid mt-5">
    <div class="row w-50 ms-auto me-auto mt-5"  style="background: url(/images/profile.jpg)">
        <div class="d-flex flex-column col text-center align-items-center p-2">
             

                <h1 class="not-italic font-sans font-semibold">Profile de {{ user.username }} </h1>
                <div class="my-4 ">
                        <p class="text-lg">Your Id:</p>
                        <p class="italic">{{ user.id }}</p>
                </div>

                <div class="mb-4">
                    <p class="text-lg">Your username:</p>
                    <p class="italic">{{ user.username }}</p>
                </div>

                <div class="mb-4">
                    <p class="text-lg">Your e-mail:</p>
                    <p class="italic">{{ user.email }}</p>
                </div>

                {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</section>

{% endblock %}