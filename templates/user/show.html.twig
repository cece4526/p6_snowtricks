{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
   <section class="container mt-5">
    <div class="row">
        <div class="col">
             <h1 class="not-italic font-sans font-semibold">User Profile</h1>

            <div class="text-center">

                <div class="flex flex-col mt-4 mb-4 px-8">
                        <p class="text-lg">Your Id:</p>
                        <p class="italic">{{ user.id }}</p>
                </div>

                <div class="flex flex-col mb-4 px-8">
                    <p class="text-lg">Your username:</p>
                    <p class="italic">{{ user.username }}</p>
                </div>

                <div class="flex flex-col mb-4 px-8">
                    <p class="text-lg">Your e-mail:</p>
                    <p class="italic">{{ user.email }}</p>
                </div>

                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
   </section>

{% endblock %}